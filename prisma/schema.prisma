// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortUrl {
  id          String    @id @default(cuid())
  originalUrl String
  shortCode   String    @unique
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
}

model Paste {
  id          String    @id @default(uuid())
  title       String
  description String?
  content     String    @db.Text
  language    String
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
}

model RequestLog {
  id        String   @id @default(cuid())
  ip        String
  path      String
  timestamp BigInt
  createdAt DateTime @default(now())

  @@index([ip, path, timestamp])
  @@map("request_logs")
}

model BlacklistLog {
  id        String   @id @default(cuid())
  ip        String
  path      String
  timestamp BigInt
  createdAt DateTime @default(now())

  @@index([ip, path, timestamp])
  @@map("blacklist_logs")
}